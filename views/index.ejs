<% include partials/header.ejs %>

    <div class="container">
        <form class="request" action="/search/result" method="post" enctype="multipart/form-data">
            <div class="form-group col-md-3">
                Budget 
                <select name="budget">
                    <option value="low">Low (Rp 0 - Rp 5.000.000)</option>
                    <option value="mid">Mid (Rp 5.000.000 - Rp 10.000.000)</option>
                    <option value="high">High ( > Rp 10.000.000)</option>
                </select>           
            </div>
                
            <div class="form-group col-md-3">
                What will you use it for
                <select name="use" >
                    <option value="multimedia">Multimedia (designing, video editing, etc)</option>
                    <option value="business">Business</option>
                    <option value="developer">Developer</option>
                    <option value="gaming">Heavy Gaming</option>
                    <option value="socdoc">Office and Social Media</option>
                </select>
            </div>

            <div class="form-group col-md-3">
                What laptop type do you prefer
                <select name="type" >
                    <option value="laptop">Laptop</option>
                    <option value="two">2-in-1</option>
                </select>
            </div>
                
            <div class="form-group col-md-3" >
                What screen size do you prefer
                <select name="scsize">
                    <option value="s">Small (less than 13")</option>
                    <option value="m">Medium (13 - 15")</option>
                    <option value="l">Large (15" or greater)</option>
                </select>
            </div>
                
        </div>
        <button type="submit" class="btn btn-primary float-right" style="width:100%">Search</button>
    </div>
</div>
</body>
</html>